<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Spinner to select family members -->
    <Spinner
        android:id="@+id/spinnerFamilyMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:prompt="@string/select_family_member" />

    <!-- Button to add/remove family members -->
    <Button
        android:id="@+id/btnAddRemoveMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_remove_member"
        android:layout_below="@id/spinnerFamilyMembers"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnAddRemoveMember"/>

</RelativeLayout>