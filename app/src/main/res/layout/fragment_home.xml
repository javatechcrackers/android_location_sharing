<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/gradientbg_2"
        android:padding="20dp"


        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/fg_btn_live_tracking"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/livetracking"
                android:scaleType="fitCenter"
                android:layout_marginBottom="10dp"

                android:background="@drawable/circular_button"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Tracking"
                android:textSize="15sp"
                android:textColor="@color/white"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/fg_btn_geofence"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon2"
                android:background="@drawable/circular_button"
                android:scaleType="fitCenter"

                android:layout_marginBottom="10dp"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geo-Locations"
                android:textSize="15sp"
                android:textColor="@color/white"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/fg_btn_share_current_location"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon3"
                android:background="@drawable/circular_button"
                android:scaleType="fitCenter"
                android:layout_marginBottom="10dp"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share Location"
                android:textSize="15sp"
                android:textColor="@color/white"
                />

        </LinearLayout>







    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


