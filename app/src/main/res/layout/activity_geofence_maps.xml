<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/gradientbg_2"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:padding="4dp"
            android:gravity="center"

            android:background="@drawable/rectanglebackground"
            >
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:background="@drawable/circular_maps_btn"
                android:id="@+id/geofenceRadiusMinus"

                android:text="-"
                android:textSize="20sp"
                android:textFontWeight="900"
                android:textStyle="bold"


                android:textColor="@color/white"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:gravity="center_vertical"

                >
                <TextView
                    android:id="@+id/tvgeofenceRadiustext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:text="Geofence Radius"
                    android:textAlignment="center"

                    />

                <TextView
                    android:id="@+id/tvgeofenceRadius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="hhhhhhh"
                    android:textAlignment="center"

                    />

            </LinearLayout>





            <Button
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:background="@drawable/circular_maps_btn"
                android:layout_height="40dp"
                android:id="@+id/geofenceRadiusPlus"

                android:text="+"
                android:textSize="20sp"

                android:textColor="@color/white"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:padding="4dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/rectanglebackground"
            >
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:id="@+id/geofenceEntryDurationMinus"

                android:text="-"
                android:textSize="20sp"
                android:background="@drawable/circular_maps_btn"
                android:textFontWeight="900"
                android:textStyle="bold"


                android:textColor="@color/white"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:gravity="center_vertical"

                >
                <TextView
                    android:id="@+id/tvGeofenceEnterLimittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="Time Limit"
                    android:textAlignment="center"

                    />

                <TextView
                    android:id="@+id/tvgeofenceTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="2 minutes"
                    android:textAlignment="center"

                    />

            </LinearLayout>



            <Button
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="40dp"
                android:background="@drawable/circular_maps_btn"
                android:id="@+id/geofenceEntryDurationPlus"

                android:text="+"
                android:textSize="20sp"

                android:textColor="@color/white"

                />

        </LinearLayout>






